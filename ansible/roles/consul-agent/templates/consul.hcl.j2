datacenter = "{{ consul_datacenter }}"
data_dir = "/opt/consul"
bind_addr = "0.0.0.0"
client_addr = "0.0.0.0"
advertise_addr = "{{ ansible_default_ipv4.address }}"
{% if consul_encryption_key %}
encrypt = "{{ consul_encryption_key }}"
{% endif %}
retry_join ={{ consul_retry_join_lan }}
addresses {
    grpc = "0.0.0.0"
}
connect {
  enabled = true
}
ports {
  grpc  = 8502
}

[Unit]
Description=Consul Envoy Sidecar for Jigasi Transcriber
After=network.target

[Service]
User=consul
Group=consul
ExecStart=/usr/bin/consul connect envoy -sidecar-for=jigasi-transcriber
Restart=on-failure
KillSignal=SIGQUIT
Type=simple
StandardOutput=syslog
StandardError=syslog
NotifyAccess=all
SyslogIdentifier=envoy

[Install]
WantedBy=multi-user.target


